{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@design-system": [
        "src/design-system/server"
      ],
      "@design-system/client": [
        "src/design-system/client"
      ],
      "@design-system/utils/*": [
        "src/design-system/utils/*"
      ],
      "@design-system/hooks/*": [
        "src/design-system/hooks/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "@mda/strapi-types"
    ]
  },
  "include": [
    "types/**/*.d.ts",
    "next-env.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__stories__"
  ]
}