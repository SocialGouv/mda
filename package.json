{
  "name": "mda-monorepo",
  "version": "1.8.0",
  "description": "Aider les personnes concernées par l'autisme à trouver leurs réponses et à mener à bien leurs démarches.",
  "repository": "git@github.com:SocialGouv/mda.git",
  "bugs": {
    "url": "https://github.com/SocialGouv/mda/issues"
  },
  "author": "Fabrique des ministères sociaux",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "db": "docker-compose up -d --remove-orphans db pgadmin",
    "db:stop": "docker-compose stop db pgadmin",
    "db:down": "docker-compose rm -sv db pgadmin",
    "maildev": "docker-compose up -d --remove-orphans --build maildev && open http://localhost:1080",
    "meilisearch": "docker-compose up -d --remove-orphans meilisearch",
    "dev": "yarn db && turbo dev --parallel --continue",
    "lint": "turbo lint --continue"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@socialgouv/releaserc": "^1.1.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.15.3",
    "dotenv": "^16.0.3",
    "semantic-release": "^20.1.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "turbo": "^1.8.3",
    "typescript": "^4.9.4"
  },
  "resolutions": {
    "typescript": "^4.9.4"
  }
}
